<div class="box-600 panel panel-default">
  <div class="panel-heading"><%= t 'pages.forgot_password.title' %></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'form-horizontal'}) do |f| %>
        <div class="form-group <%= get_has_error_class(resource.errors[:email]) %>">
          <%= f.label :email, for: 'inputEmail1', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.email_field :email, id: 'inputEmail1', class: 'form-control', placeholder: t('pages.login.placehold.email'), autofocus: true %>
            <%= render partial: 'shared/error_messages', collection: resource.errors[:email] %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit t('pages.forgot_password.send_instructions_button'), class: 'btn btn-default' %>
            <p><%= render "devise/shared/links" %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>
