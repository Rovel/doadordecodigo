<div class="box-600 panel panel-default">
  <div class="panel-heading"><%= t 'pages.new_account.title' %></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <div class="form-group <%= get_has_error_class(resource.errors[:email]) %>">
          <%= f.label :email, for: 'inputEmail1', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.email_field :email, id: 'inputEmail1', class: 'form-control', placeholder: t('pages.new_account.placehold.email'), autofocus: true %>
            <%= render partial: 'shared/error_messages', collection: resource.errors[:email] %>
          </div>
        </div>
        <div class="form-group <%= get_has_error_class(resource.errors[:password]) %>">
          <%= f.label :password, for: 'inputPassword2', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if @minimum_password_length %>
                <p class="text-muted">
                  <small>(<%= t('pages.new_account.characters_minimum', length: @minimum_password_length) %>)</small>
                </p>
            <% end %>
            <%= f.password_field :password, id: 'inputPassword2', class: 'form-control', placeholder: t('pages.new_account.placehold.password'), autocomplete: "off" %>
            <%= render partial: 'shared/error_messages', collection: resource.errors[:password] %>
          </div>
        </div>
        <div class="form-group <%= get_has_error_class(resource.errors[:password_confirmation]) %>">
          <%= f.label :password_confirmation, for: 'inputPassword3', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, id: 'inputPassword3', class: 'form-control',
                                 placeholder: t('pages.new_account.placehold.confirmation'), autocomplete: "off" %>
            <%= render partial: 'shared/error_messages', collection: resource.errors[:password_confirmation] %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit t('pages.new_account.create_button'), class: "btn btn-default" %>
            <div><%= render "devise/shared/links" %></div>
          </div>
        </div>
    <% end %>
  </div>
</div>
